<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_gravity="center"
    android:layout_height="match_parent"
    tools:context=".OTPActivity">
    <ImageView
        android:src="@drawable/otppass"
        android:layout_width="250dp"
        android:layout_height="250dp" />
    <TextView
        android:text="Verify"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="bold|normal"
        android:textColor="#03A9F4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:text="Enter the OTP code to validate your email"
        android:textAlignment="center"
        android:textSize="15sp"
        android:textStyle="normal"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <androidx.cardview.widget.CardView
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:padding="10dp"
            android:layout_margin="10sp"
            android:layout_gravity="center"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.mukesh.OtpView
                android:id="@+id/otp_view"
                android:labelFor="@+id/otp_view"
                android:hint="@string/enter_otp_code_here"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:otp="1234"
                app:otp_size="4"
                app:otp_view_type="rectangle"
                app:otp_item_width="60dp"
                app:otp_item_height="60dp"
                app:otp_item_radius="8dp"
                app:otp_item_padding="12dp"
                app:otp_item_background_color="@color/white"
                app:otp_cursor_color="#000000"
                app:otp_cursor_width="2dp"
                app:otp_text_color="#000000"
                app:otp_text_size="20sp"
                app:otp_masking="true"
                app:otp_secure_keyboard="true"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>